<?import java.awt.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextArea?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.NoteController" spacing="10" padding="10">

    <Label text="Not Başlığı:"/>
    <TextField fx:id="titleField"/>

    <Label text="İçerik:"/>
    <TextArea fx:id="contentArea"/>

    <Label text="Hatırlatma Zamanı:"/>
    <DatePicker fx:id="datePicker"/>
    <TextField fx:id="timeField" promptText="HH:mm"/>

    <Button text="Not Ekle" onAction="#handleAddNote"/>

    <TableView fx:id="noteTable">
        <!-- Sütunlar burada tanımlanacak -->
    </TableView>
</VBox>
